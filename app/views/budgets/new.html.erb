<%= render "budgets/new" %>
<div class="container d-flex flex-column justify-content-center align-items-center">

  <%= form_with model: @budgets, url: group_budgets_path, method: :post, data: { turbo: false } do |f| %>
    <div class="field mt-2 mb-2">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control", placeholder: "Budget Name" %>
    </div>
    <div class="field mb-2">
      <%= f.text_field :amount, autofocus: true, autocomplete: "name" , class: "form-control", placeholder: "Amount in numbers" %>
    </div>

    <div class="actions mb-2">
      <%= f.submit "SAVE" , class: "btn btn-success" %>
    </div>
  <% end %>
</div>